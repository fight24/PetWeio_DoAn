<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/gray_300"
    app:cardCornerRadius="10dp"
    android:layout_margin="3dp"
    android:id="@+id/cardViewLayout"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icHistory"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/images"
            android:layout_centerVertical="true"
            android:elevation="4dp"
            app:civ_border_width="1dp"
            app:civ_border_color="#FFFFFF"
            />

        <TextView
            android:id="@+id/txtTitleDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/icHistory"
            android:fontFamily="@font/seymour_one"
            android:text="@string/device_01"
            android:textColor="#04315E"
            android:textSize="10sp"
            tools:ignore="RelativeOverlap,SmallSp" />

        <LinearLayout
            android:id="@+id/layoutValue"
            android:padding="3dp"
            android:layout_toEndOf="@id/txtTitleDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Lat:"

                    android:fontFamily="@font/black_ops_one"
                    tools:ignore="HardcodedText,SmallSp,TextSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                <TextView
                    android:layout_marginStart="5dp"
                    android:id="@+id/valueOfLat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="26.000000"
                    android:textSize="8sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/black_ops_one"
                    tools:ignore="HardcodedText,SmallSp,TextSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Lng:"

                    android:textAlignment="center"
                    android:fontFamily="@font/black_ops_one"
                    tools:ignore="HardcodedText,SmallSp,TextSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                <TextView
                    android:layout_marginStart="5dp"
                    android:id="@+id/valueOfLng"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="26.0000000"
                    android:textSize="8sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="@font/black_ops_one"
                    tools:ignore="HardcodedText,SmallSp,TextSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutValueTime"
            android:padding="3dp"
            android:layout_toEndOf="@id/layoutValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_marginStart="5dp"
                    android:id="@+id/valueOfTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2023-12-06 16:12:17"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/black_ops_one"
                    tools:ignore="HardcodedText,SmallSp,TextSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>