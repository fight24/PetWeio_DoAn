<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerTemplate"
    tools:context=".fragments.MapFragment">

    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/bluegray_800">
        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/white"
            style="@style/SpinKitView.Large.DoubleBounce"
            android:layout_gravity="center"
            android:visibility="visible"/>

    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/containerMap"
        android:visibility="invisible"
        >
        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:layout_constraintTop_toTopOf="parent"
            mapbox:mapbox_cameraZoom="11.7"
            tools:ignore="VisualLintBounds" />

        <View
            android:id="@+id/clickInterceptor"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:importantForAccessibility="no"
            android:src="@drawable/custom_hcn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,TouchTargetSizeCheck,SpeakableTextPresentCheck,ImageContrastCheck" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listViewDevice"
            android:layout_width="wrap_content"
            android:background="@drawable/round_back_menu"
            android:layout_height="100dp"
            tools:listitem="@layout/item_menu_device"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMenu"
            tools:ignore="MissingConstraints,TextSizeCheck" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:importantForAccessibility="no"
            android:src="@drawable/baseline_my_location_24"

            app:layout_constraintBottom_toTopOf="@+id/containerFeatures"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedCornerShape_50pt"
            tools:ignore="MissingConstraints" />

        <FrameLayout
            android:id="@+id/containerFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
           >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_corner"
                android:orientation="vertical"
                tools:ignore="MissingConstraints,UselessLeaf,VisualLintBounds">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80pxh"
                    android:layout_gravity="top"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_28pxv"
                            android:layout_marginTop="@dimen/_20pxv"
                            android:fontFamily="@font/seymour_one"
                            android:text="@string/device_01"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_24pxv"

                            android:textStyle="bold"
                            tools:ignore="SpUsage,TextSizeCheck" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_28pxv">

                            <ImageView
                                android:id="@+id/icBattery"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:importantForAccessibility="no"
                                android:src="@drawable/flash_white" />

                            <TextView
                                android:id="@+id/txtBattery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/icBattery"
                                android:fontFamily="@font/vndi02"
                                android:text="@string/_100"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:ignore="TextSizeCheck" />

                            <TextView
                                android:id="@+id/txtType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="50dp"
                                android:layout_toEndOf="@+id/txtBattery"
                                android:fontFamily="@font/seymour_one"
                                android:text="@string/type"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="VisualLintBounds" />

                            <TextView
                                android:id="@+id/txtValueType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/txtType"
                                android:fontFamily="@font/montserratsemibold"
                                android:text="@string/dog"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="normal"


                                />
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnImgClose"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="@dimen/_15pxv"
                        android:layout_marginEnd="@dimen/_15pxv"
                        android:background="@drawable/circle_close_map"
                        android:importantForAccessibility="no"
                        android:src="@drawable/baseline_close_24"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/custom_corner_white"
                    android:orientation="vertical"
                    tools:ignore="ExtraText,VisualLintBounds">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_28pxv"
                            android:layout_marginTop="@dimen/_20pxv"
                            android:layout_weight="1"
                            android:fontFamily="@font/seymour_one"
                            android:text="@string/features"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_24pxv"
                            android:textStyle="bold"
                            tools:ignore="SpUsage,TextSizeCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerFeaturesValues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            tools:listitem="@layout/item_featrures"
                            android:orientation="horizontal"
                            tools:itemCount="1"
                            android:overScrollMode="never" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnFind"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/round_back_button"
                            android:backgroundTint="@color/bluegray_800"
                            android:backgroundTintMode="screen"
                            android:fontFamily="@font/seymour_one"
                            android:gravity="center"
                            android:text="@string/find"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:id="@+id/imgUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="@dimen/_20pxh"
                    android:layout_gravity="end|top"
                    android:background="@drawable/circle_border"

                    tools:ignore="MissingConstraints,ObsoleteLayoutParam,UselessParent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageDevice"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginBottom="9dp"
                        android:background="@drawable/circle"
                        android:elevation="4dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#FFFFFF"
                        android:src="@drawable/images" />

                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>