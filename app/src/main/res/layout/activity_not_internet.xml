<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InternetActivity"
    android:background="#232222"

    >

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center"
        tools:ignore="UselessParent">
        <ImageView
            android:layout_margin="@dimen/_10pxh"
            android:id="@+id/imgNotInternet"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/baseline_signal_wifi_connected_no_internet_4_24"
            android:importantForAccessibility="no" />

        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgNotInternet"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/black_ops_one"
            android:text="No Internet Connection"
            android:textColor="#757575"
            android:textSize="20sp"
            tools:ignore="HardcodedText" /></RelativeLayout>


</FrameLayout>