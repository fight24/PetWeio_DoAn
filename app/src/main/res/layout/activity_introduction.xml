<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Introduction.IntroductionActivity"
    >
    <FrameLayout
        android:id="@+id/frameStackbackground"
        style="@style/groupStylewhite_A700"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/frameIntroduction"
            style="@style/groupStylewhite_A700"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <View
                android:id="@+id/viewBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@drawable/gradient_status_bar"
                tools:ignore="VisualLintBounds" />

            <LinearLayout
                android:id="@+id/linearColumntitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginStart="@dimen/_40pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_40pxh"
                android:layout_marginBottom="@dimen/_9pxv"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitle"
                    style="@style/txtMontserratsemibold20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_6pxh"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_pets_are_here"
                    tools:ignore="TextSizeCheck"
                    tools:text="@string/lbl_pets_are_here" />

                <TextView
                    android:id="@+id/txtDescription"
                    style="@style/txtMontserratmedium14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4pxh"
                    android:layout_marginTop="@dimen/_20pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:gravity="start"
                    android:lineSpacingExtra="@dimen/_6pxh"
                    android:text="@string/msg_finding_and_tra"
                    tools:ignore="TextSizeCheck"
                    tools:text="@string/msg_finding_and_tra" />

                <LinearLayout
                    android:id="@+id/linearButtonBG"
                    style="@style/groupStyleblack_900_0ccornerRadius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_32pxv"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnLogin"
                        style="@style/btnSolidRounded"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.74"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingStart="@dimen/_30pxh"
                        android:paddingTop="@dimen/_15pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_15pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_login"
                        android:textAllCaps="false"
                        tools:ignore="TextSizeCheck,VisualLintButtonSize"
                        tools:text="@string/lbl_login" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSignup"
                        style="@style/btnMontserratsemiBold14"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.74"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingStart="@dimen/_30pxh"
                        android:paddingTop="@dimen/_15pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_15pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_signup"
                        android:textAllCaps="false"
                        tools:ignore="TextSizeCheck,VisualLintButtonSize"
                        tools:text="@string/lbl_signup" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtVersion"
                    android:fontFamily="@font/black_ops_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_29pxv"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/_3pxh"
                    android:singleLine="true"
                    android:text="@string/msg_app_version_1_0"
                    android:textColor="#616161"
                    tools:ignore="TextSizeCheck"
                    tools:text="@string/msg_app_version_1_0" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/frameGraphicPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"

                tools:ignore="VisualLintBounds">

                <ImageView
                    android:id="@+id/imageRectangleSeventeen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/undraw_welcome_cats_thqn_origin"
                    tools:ignore="ContentDescription,VisualLintBounds"
                    tools:src="@drawable/undraw_welcome_cats_thqn_origin" />

            </FrameLayout>
        </FrameLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>