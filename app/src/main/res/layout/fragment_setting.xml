<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingFragment"
    android:background="@color/gray_300"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/imgUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_border"
                    tools:ignore="ObsoleteLayoutParam">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginBottom="9dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:background="@drawable/circle"
                        android:padding="3dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_user"
                        tools:ignore="ImageContrastCheck" />
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Android"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="android@abc.com"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="Edit Profile"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText,TouchTargetSizeCheck"/>

                <!-- buttons  -->
                <LinearLayout
                    android:background="@drawable/big_buttn_bg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:padding="15dp"
                    >
                    <!--       Tab bar         -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/tabbar"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/tab"
                            android:padding="13dp"
                            android:importantForAccessibility="no" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_centerVertical="true"
                            android:text="Tab Bar"
                            android:padding="2dp"
                            android:textColor="@color/black"
                            android:layout_toEndOf="@+id/tabbar"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/arrow_forward"
                            android:importantForAccessibility="no" />

                    </RelativeLayout>

                </LinearLayout>

                <!--      group tabs      -->

                <LinearLayout
                    android:background="@drawable/sec_bth_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:padding="15dp">
                    <!--       appaernace       -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">

                        <ImageView
                            android:id="@+id/appearance"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/appearace"
                            android:padding="13dp"
                            android:importantForAccessibility="no" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_centerVertical="true"
                            android:text="Appearance"
                            android:padding="2dp"
                            android:textColor="@color/black"
                            android:layout_toEndOf="@+id/appearance"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_forward"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:importantForAccessibility="no" />

                    </RelativeLayout>
                    <!--       sound       -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">

                        <ImageView
                            android:id="@+id/sound"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/notifications"
                            android:padding="13dp"
                            app:tint="@color/black"
                            android:importantForAccessibility="no" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_centerVertical="true"
                            android:text="Sound and Notification"
                            android:padding="2dp"
                            android:textColor="@color/black"
                            android:layout_toEndOf="@+id/sound"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_forward"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:importantForAccessibility="no" />

                    </RelativeLayout>
                    <!--       date and time       -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">

                        <ImageView
                            android:id="@+id/date"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/date"
                            android:padding="13dp"
                            android:importantForAccessibility="no" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_centerVertical="true"
                            android:text="Date and Time"
                            android:padding="2dp"
                            android:textColor="@color/black"
                            android:layout_toEndOf="@+id/date"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_forward"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:importantForAccessibility="no" />
                    </RelativeLayout>
                    <!--      general       -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">

                        <ImageView
                            android:id="@+id/general"
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:background="@drawable/general"
                            android:padding="13dp"
                            android:importantForAccessibility="no" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_centerVertical="true"
                            android:text="General"
                            android:padding="2dp"
                            android:textColor="@color/black"
                            android:layout_toEndOf="@+id/general"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_forward"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:importantForAccessibility="no" />
                    </RelativeLayout>
                </LinearLayout>
                <!--next btn-->
                <LinearLayout
                    android:background="@drawable/big_buttn_bg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:padding="15dp"
                    >
                    <!--       import and integrate         -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        tools:ignore="TextSizeCheck">

                        <ImageView
                            android:id="@+id/integrate"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/integrate"
                            android:padding="13dp"
                            android:importantForAccessibility="no" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_toEndOf="@+id/integrate"
                            android:padding="2dp"
                            android:text="Import and Integration"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:importantForAccessibility="no"
                            android:src="@drawable/arrow_forward" />
                    </RelativeLayout>
                </LinearLayout>
                <!--next btn-->
                <LinearLayout
                    android:background="@drawable/big_buttn_bg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="15dp"
                    >
                    <!--       help centre         -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/help"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/help"
                            android:padding="13dp"
                            android:importantForAccessibility="no" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_centerVertical="true"
                            android:text="Help Centre"
                            android:padding="2dp"
                            android:textColor="@color/black"
                            android:layout_toEndOf="@+id/help"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_forward"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:importantForAccessibility="no" />
                    </RelativeLayout>
                </LinearLayout>
                <!--next btn-->
                <LinearLayout
                    android:background="@drawable/big_buttn_bg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="15dp"
                    >
                    <!--       logout         -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/logout"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/tab"
                            android:padding="13dp"
                            android:importantForAccessibility="no" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_centerVertical="true"
                            android:text="Log Out"
                            android:padding="2dp"
                            android:textColor="@color/black"
                            android:layout_toEndOf="@+id/logout"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_forward"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:importantForAccessibility="no" />
                    </RelativeLayout>
                </LinearLayout>
                <!--      logout btn end     -->
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>